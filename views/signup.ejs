<div class="card">
    <div class="card-header">
        <h4 class="font-weight-bold">Sign Up</h4>
    </div>
    <div class="card-body">
        <form action="/signup" method="post">
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="name">Name</label>
                        <input type="text" class="form-control" name="name" placeholder="enter name" id="name" required>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="email">Email</label>
                        <input type="text" class="form-control" name="email" placeholder="enter email" id="email" required>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="password">Password</label>
                        <input type="password" class="form-control" name="password" placeholder="enter password" id="password" required>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="confirm_password">Confirm Password</label>
                        <input type="password" class="form-control" name="confirm_password" placeholder="enter confirm password" id="confirm_password" required>
                    </div>
                </div>
            </div>
            <div class="">
                <button itype="submt" class="btn btn-success">Signup</button>
                <a href="/" class="btn btn-light">Cancel</a>
            </div>
        </form>
    </div>
</div>